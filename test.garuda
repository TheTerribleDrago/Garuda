# Garuda Test File
लिखतु("नमस्ते विश्व!")

# Variable
चर संख्या = 42
चर नाम = "गरुड"

# Function
प्रत्याययतु योगः(अ, ब) तदा प्रारभ्य
    प्रत्यावर्तयतु अ + ब
समाप्य

# Call function
चर परिणाम = योगः(10, 20)
लिखतु("परिणाम:", परिणाम)

# If-Else (Fixed - else comes after if block ends)
यदि संख्या > 40 तदा प्रारभ्य
    लिखतु("संख्या बड़ी है")
समाप्य
अन्यथा प्रारभ्य
    लिखतु("संख्या छोटी है")
समाप्य

# While Loop
चर i = 0
पर्यंतम्(i < 5) तदा प्रारभ्य
    लिखतु("i =", i)
    i = i + 1
समाप्य

# For Loop
प्रति(चर j = 0; j < 3; j = j + 1) तदा प्रारभ्य
    लिखतु("j =", j)
समाप्य

# List
चर सूची = [1, 2, 3, 4, 5]
लिखतु("सूची:", सूची)

# Boolean values
चर सत्य = सत्यम्
चर असत्य = असत्यम्
चर रिक्त = शून्यम्

लिखतु("सत्य:", सत्य)
लिखतु("असत्य:", असत्य)