{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*प्रारभ्य",
      "end": "^\\s*समाप्य"
    }
  },
  "wordPattern": "[a-zA-Z_\\u0900-\\u097F][a-zA-Z0-9_\\u0900-\\u097F]*",
  "indentationRules": {
    "increaseIndentPattern": "^.*(प्रारभ्य|तदा|\\{)\\s*$",
    "decreaseIndentPattern": "^\\s*(समाप्य|\\})"
  }
}